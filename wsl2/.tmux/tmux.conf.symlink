# sessions
bind s source-file ~/.tmux/sessions/clem
bind t source-file ~/.tmux/sessions/docker
bind u source-file ~/.tmux/sessions/docker2

# reload config file
bind r source-file ~/.tmux.conf \; display "Config Reloaded!"

# pane movement shortcuts
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# azerty copy/paste mode
bind = copy-mode
bind + paste-buffer

source $HOME/.tmux/base16.sh
