[push]
	default = matching
[core]
    autocrlf = false
[alias]
	cfar = config remote.origin.fetch +refs/heads/*:refs/remotes/origin/* 
	ci = commit
	am = commit --amend
	pg = clean -fxd
	psh = "!git push origin `git symbolic-ref HEAD | sed -e 's#^refs/heads/##'`"
	co = checkout
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	reb = pull --rebase
	review = "!git push origin HEAD:refs/for/`git symbolic-ref HEAD | sed -e 's#^refs/heads/##'`"
[diff]
	submodule = log
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
